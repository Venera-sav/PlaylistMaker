<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/ScreenSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="26dp">

        <Button
            android:id="@+id/fromSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_gravity="start|center_vertical"
            android:scaleType="centerCrop"
            app:icon="@drawable/refund"
            style="@style/RefundSettings"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/settings"
            style="@style/HeadingSettings"
            android:textSize="@dimen/headingSize"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonSize">
        <Button
            android:layout_width="300dp"
            android:layout_height="@dimen/buttonSize"
            style="@style/ButtonSettings"
            android:text="@string/darkTheme"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swithTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="14dp"
            android:theme="@style/MySwitch"
            android:checked="false"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>
    </FrameLayout>

    <Button
        android:id="@+id/shareApp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonSize"
        style="@style/ButtonSettings"
        app:icon="@drawable/share"
        android:text="@string/share"/>

    <Button
        android:id="@+id/writeToSupport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonSize"
        style="@style/ButtonSettings"
        app:icon="@drawable/support"
        android:text="@string/write"/>

    <Button
        android:id="@+id/agreementVeb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonSize"
        style="@style/ButtonSettings"
        app:icon="@drawable/arrow"
        android:text="@string/agreement"/>

</LinearLayout>